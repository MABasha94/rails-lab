<% if @post.errors.any? %>
    <div class="alert alert-danger mt-3">
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@post, url: @post) do |f| %>
    <div class="mt-3">
      <h1>Create Post</h1>
    </div>
    <div class="form-group mt-3">
      <%= f.text_field(:title, placeholder: "enter title...", class: "form-control") %>
    </div>

    <div class="form-group">
      <%= f.text_area(:content, placeholder: "enter content...", class: "form-control", rows: "5") %>
    </div>

    <%= submit_tag btnt, class: "btn btn-#{btnc} btn-block" %>
<% end %>